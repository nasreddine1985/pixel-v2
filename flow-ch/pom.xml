    <build>
        <plugins>
            <!-- Spring Boot Maven Plugin -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring-boot.version}</version>
                <configuration>
                    <mainClass>com.pixel.v2.PixelCamelApplication</mainClass>
                    <layers>
                        <enabled>true</enabled>
                    </layers>
                    <jvmArguments>
                        --add-opens java.base/java.lang=ALL-UNNAMED
                        --add-opens java.base/java.util=ALL-UNNAMED
                        -Dkafka.client.security.reflection.warnings=false
                        -Djava.util.logging.manager=org.apache.logging.log4j.jul.LogManager
                    </jvmArguments>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Maven Compiler Plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>21</source>
                    <target>21</target>
                </configuration>
            </plugin>

            <!-- Maven Surefire Plugin for Tests -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.1.2</version>
                <configuration>
                    <excludes>
                        <!-- Exclude integration tests that require full Camel context with kamelets -->
                        <exclude>**/ChRouteTest.java</exclude>
                        <exclude>**/PixelCamelApplicationTest.java</exclude>
                        <exclude>**/RedisProcessorTest.java</exclude>
                        <exclude>**/PixelCamelApplicationSimpleTest.java</exclude>
                    </excludes>
                </configuration>
            </plugin>

            <!-- Maven Dependency Plugin to extract kamelets from JAR dependencies -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.6.1</version>
                <executions>
                    <execution>
                        <id>extract-kamelets</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeGroupIds>com.pixel.v2</includeGroupIds>
                            <includes>**/*.kamelet.yaml</includes>
                            <outputDirectory>${project.build.directory}/extracted-resources</outputDirectory>
                            <overWriteReleases>true</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Maven Resources Plugin to copy extracted kamelets to classpath -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.3.1</version>
                <executions>
                    <execution>
                        <id>copy-kamelets</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}/kamelets</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>
                                        ${project.build.directory}/extracted-resources/kamelets</directory>
                                    <includes>
                                        <include>*.kamelet.yaml</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>


        </plugins>
    </build>

    <profiles>
